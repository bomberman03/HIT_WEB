<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

  <link rel="stylesheet" href="stylesheets/bootstrap-material-design.css">
  <link rel="stylesheet" href="stylesheets/ripples.css">

  <link rel="stylesheet" type="text/css" href="stylesheets/style.css">

  <!-- Material Design fonts -->
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700">
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/icon?family=Material+Icons">

  <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>

  <script src="javascripts/style/ripples.js"></script>
  <script src="javascripts/style/material.js"></script>

    <script src="javascripts/angular.js"></script>

    <script src="javascripts/factory/auth.js"></script>
    <script src="javascripts/controller/authController.js"></script>

    <script src="javascripts/factory/hit.js"></script>
    <script src="javascripts/controller/navController.js"></script>
    <script src="javascripts/controller/mainController.js"></script>
</head>
<body class="nav-top-fixed-body" ng-app="mcnCoffee" ng-controller="NavCtrl">
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/#/home">HIT Tracer</a>
    </div>
    <div class="collapse navbar-collapse navbar-ex1-collapse">
      <ul class="nav navbar-nav navbar-right right-half-margin">
        <li ng-show="isLoggedIn()"><a>{{ currentUser().username }}</a></li>
        <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
      </ul>
    </div>
  </nav>
  <ui-view></ui-view>
  <script type="text/ng-template" id="/home.html">
      <div class="row">
          <div>hello world!</div>
      </div>
  </script>
  <script type="text/ng-template" id="/register.html">
      <div class="container col-md-offset-2 col-md-8">
          <div ng-show="error" class="alert alert-danger row">
              <span>{{ error.message }}</span>
          </div>
          <div class="well bs-component">
              <form class="form-horizontal">
                  <fieldset>
                      <legend>
                          회원 가입
                      </legend>
                      <div class="form-group is-empty">
                          <label for="inputName" class="col-md-2 control-label">이름</label>
                          <div class="col-md-10">
                              <input id="inputName" type="text" class="form-control" placeholder="이름" ng-model="user.username"/>
                          </div>
                          <span class="material-input"></span>
                      </div>
                      <div class="form-group is-empty">
                          <label for="inputPassword" class="col-md-2 control-label">비밀번호</label>
                          <div class="col-md-10">
                              <input id=inputPassword" type="password" class="form-control" placeholder="비밀번호" ng-model="user.password"/>
                          </div>
                          <span class="material-input"></span>
                      </div>
                      <div class="form-group is-empty pull-center">
                          <button ng-click="register()" class="btn btn-raised btn-primary">등록하기</button>
                      </div>
                  </fieldset>
              </form>
          </div>
      </div>
  </script>
  <script type="text/ng-template" id="/login.html">
      <div class="container col-md-offset-2 col-md-8">
          <div ng-show="error" class="alert alert-danger row">
              <span>{{ error.message }}</span>
          </div>
          <div class="well bs-component">
              <form ng-submit="logIn()" class="form-horizontal">
                  <fieldset>
                      <legend>
                          로그인
                      </legend>
                      <div class="form-group is-empty">
                          <label for="inputName" class="col-md-2 control-label">이름</label>
                          <div class="col-md-10">
                              <input id="inputName" type="text" class="form-control" placeholder="이름" ng-model="user.username"/>
                          </div>
                          <span class="material-input"></span>
                      </div>
                      <div class="form-group is-empty">
                          <label for="inputPassword" class="col-md-2 control-label">비밀번호</label>
                          <div class="col-md-10">
                              <input id=inputPassword" type="password" class="form-control" placeholder="비밀번호" ng-model="user.password"/>
                          </div>
                          <span class="material-input"></span>
                      </div>
                      <div class="form-group is-empty pull-center">
                          <button type="submit" class="btn btn-raised btn-primary">로그인</button>
                      </div>
                  </fieldset>
              </form>
          </div>
      </div>
  </script>
</body>
